//退出登录
function exit(){
$.mobiles({
			mobiles: [{
			text: "确定退出",
			onClick: function() {
				$.ajax({
					url : 'member/logout.mobile',
					type: "POST",
					dataType: "Text",
					success: function (result) {
						$.toptip(result, 2000, 'success');
						setTimeout('window.location.href="login.jsp"', 1000 );
					}
		});
}
}]
});
}

























